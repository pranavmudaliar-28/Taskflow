# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/taskflow

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# Stripe Configuration (Optional - for payment features)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Email Configuration (SMTP)
# If not configured, emails will be logged to console only
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM="TaskFlow Pro" <noreply@taskflow.pro>

# Rate Limiting Configuration (Optional - defaults shown)
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=100

# Server Configuration
PORT=5001
NODE_ENV=development

# Replit Auth (Optional - for Replit deployment)
# REPL_ID=your-repl-id
